{
  "kind": "collectionType",
  "collectionName": "productos",
  "info": {
    "singularName": "producto",
    "pluralName": "productos",
    "displayName": "Productos"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "nombre": {
      "type": "string",
      "required": true
    },
    "descripcion": {
      "type": "richtext",
      "required": true
    },
    "precio": {
      "type": "decimal",
      "required": true
    },
    "oferta": {
      "type": "decimal",
      "required": true
    },
    "categoria": {
      "type": "string",
      "required": true
    },
    "portada": {
      "allowedTypes": [
        "images"
      ],
      "type": "media",
      "multiple": false,
      "required": true
    },
    "imagenes": {
      "allowedTypes": [
        "images"
      ],
      "type": "media",
      "multiple": true,
      "required": true
    },
    "fecha": {
      "type": "datetime",
      "required": true
    }
  }
}
